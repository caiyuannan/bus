<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bus.mapper.XhaCityConfigurationMapper">
        <resultMap id="cityRes" type="com.bus.javabean.XhaCityBean">
                <result property="cityName" column="city_name"></result>
                <result property="provinceName" column="province_name"></result>
        </resultMap>
        <select id="findCity" resultMap="cityRes">
            SELECT * FROM tb_province t1,tb_
            <where>
                    <if test="null != provinceName">
                        AND province_name = {provinceName}
                    </if>
                    <if test="null != cityName">
                            AND city_name = {cityName}
                    </if>
            </where>


        </select>
        
</mapper>



